# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/knowledge_agent

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AI Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=facebook/opt-1.3b

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=250

# Storage
FAISS_STORAGE_PATH=./storage/faiss_indices

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application
APP_NAME=Enterprise AI Knowledge Agent
ENVIRONMENT=development
DEBUG=true
